@model IEnumerable<btre2.Models.Listing>

@{
    ViewData["Title"] = "Listings";
}

<div class="container">
    <a asp-action="CreateListing" class="btn btn-success m-2">Create New</a>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsPublished)
                </th>
                <th>
                    Realtor
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var (item,index) in Model.Select((value, i) => (value, i)))
            {
                <tr>
                    <td>
                        @(index+1)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.IsPublished)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Realtor.Name)
                    </td>
                    <td>
                        <form asp-action="DeleteListing" asp-controller="Admin" asp-route-id="@item.Id">


                            <a asp-action="EditListing" asp-route-id="@item.Id">Edit</a> |
                            <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this data');" class="btn btn-link" style="margin-left: -10px; margin-bottom: 3px"/>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

